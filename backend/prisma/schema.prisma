generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id         String       @id @default(cuid())
  name       String
  totalVotes Int
  choices    PollChoice[]
  timeLimit  Int
  createdAt  DateTime     @default(now())
}

model PollChoice {
  id     String  @id @default(cuid())
  title  String
  votes  Int
  Poll   Poll?   @relation(fields: [pollId], references: [id])
  pollId String?
}

